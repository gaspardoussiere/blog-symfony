{% extends "base.html.twig" %}

{% block title %}Say Hello!{% endblock %}

{% block body %}
<h1>Hello {{ prenom }}</h1>


{% for p in prenoms %}

<p>Salut {{p}}</p>

{% endfor %}

{% for key, value in formateur %}

<p>Le {{key}} est {{value}}</p>

{% endfor %}
<p>
    <strong> Prénom </strong> {{formateur.prenom}}
</p>
<p>
    <strong> Nom </strong> {{formateur.nom | upper }}
</p>

<h2>Liste des élèves ({{eleves | length}}</h2>

{% for eleve in eleves %}
    <p>{{eleve.prenom}} {{eleve.nom | upper}}</p>
{% endfor %}

{% for x in 0..10 %}

<p>Count {{x}}</p>

{% endfor %}
{% endblock %}